<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="container" class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeContainer">
        <property name="types">
            <list>
                <value>#{table}</value>
                <value>#{column}</value>
            </list>
        </property>
    </bean>


    <bean name="table,tbl,t" parent="parentSchemaObjectBean">
        <property name="name" value="table" />
        <property name="child">
            <list>
                <value>#{column}</value>
                <!--<value>#{index}</value>-->
                <!--<value>#{pk}</value>
                <value>#{fk}</value>
                <value>#{trigger}</value>
                <value>#{table_grant}</value>
                <value>#{table_comment}</value>-->
            </list>
        </property>
        <property name="scanners">
            <list>
                <bean name="sqlScanner" parent="baseSqlScanner">
                    <property name="sql" value="${table}" />
                </bean>
            </list>
        </property>
        <property name="commands">
            <list>
                <bean name="create" parent="parentTemplateGeneratorBean">
                    <property name="action" ref="CREATE" />
                    <property name="template" value="${table.create}" />
                </bean>
                <bean name="dropTable" parent="parentTemplateGeneratorBean">
                    <property name="action" ref="DROP" />
                    <property name="template" value="${table.drop}" />
                </bean>
            </list>
        </property>
    </bean>


    <bean name="column,clmn,c" parent="parentSchemaObjectBean">
        <property name="name" value="column" />
        <property name="scanners">
            <list>
                <bean name="sqlScanner" parent="baseSqlScanner">
                    <property name="sql" value="${table.column}" />
                </bean>
            </list>
        </property>
